<div class="media">
  <a class="media-left" href="#">
    <img class="media-object" src="http://imgsrc.baidu.com/forum/w=580/sign=95dbf196b67eca80120539efa1229712/22988a51f3deb48fab9ef66bf61f3a292cf57876.jpg" alt="photo">
  </a>
  <div class="media-body">
    <h6 class="media-heading">#<%= comment.id %> <%= comment.commenter %><span> <%= Time.now.day%>days ago</span></h6>
    <%= comment.content %>

      <% if author_signed_in? %>
        <% if current_author.email == comment.commenter %>

            <div class="actions">
              <%= link_to 'Destroy', [comment.post, comment],
                   method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>

        <% end %>
      <% end %>
  </div>
</div>






